<div class="section">
  <%= simple_form_for([@question, @question.answers.build]) do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :answer, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-primary" %>
    <%= notice %>
  <% end %>
</div>