<% content_for :page_title,  "Login" %>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<%= form_tag do %>
<div class="box">
  <div class="form-inputs">
    <div class="field">
      <div class="control">
        <%= label_tag :name, 'Name'%>
        <%= text_field_tag :name, params[:name],  class: "input" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= label_tag :password, 'password'%>
        <%= text_field_tag :password, params[:password], class: "input", type: "password" %>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Login" , class: "button is-success is-outlined"%>
    </div>
</div>
</div>
<% end %>
