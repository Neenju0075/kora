<!DOCTYPE html>
<html>
<head>
  <title>Kora</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section class="hero is-primary is-info">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
      <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to 'KORA', root_path , class: "navbar-item" %>
          </div>
          <div id="navbarMenuHeroA" class="navbar-menu">
            <div class="navbar-end">
                <%= link_to "Users Page", users_path, class:"navbar-item" unless yield(:page_title).include? "Users page!!" %>
                <span></span>
                <%= full_title(yield(:page_title))  %>
                <span></span>
              <div class="level-right">
                <%=link_to "logout", logout_url, method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" if yield(:page_title).downcase.include? "question"  %>
              </div>
              </div>
          </div>
        </div>
      </nav>
    </div>


  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= yield :page_title %>
      </h1>
    </div>
  </div>
    <div class="navbar-item" >
      <h3><%= "Welcome " + $current_user.name + "!!!!"  unless $current_user==nil %></h3>
    </div>
</section>
<%= yield %>

</body>
</html>
