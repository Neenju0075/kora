<!DOCTYPE html>
<html>
<head>
  <title>Kora</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section class="hero is-primary is-info">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
      <nav class="navbar">
        <div class="container">
            <%= link_to 'KORA - HomePage', root_path , class: "navbar-item" %>
          </div>
          <div id="navbarMenuHeroA" class="navbar-menu">
            <div class="navbar-end">
              <% if !current_user.nil? %>
                  <%= link_to (current_user.name.capitalize + " Profile"), current_user, class:"navbar-item" %>
                  <span></span>
                  <%= link_to "Other Users", users_path, class:"navbar-item" %>
                  <span></span>
                  <%= link_to "Create New Questions", new_question_path, class:"navbar-item" %>
                  <span></span>
                  <div class="level-right">
                    <%=link_to "logout", logout_url, method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
                </div>
              <%else %>
                  <span></span>
                  <%= full_title(yield(:page_title))  %>
                  <span></span>
                <%end %>
              </div>
          </div>
      </nav>
    </div>
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= yield :page_title %>
      </h1>
    </div>
  </div>

</section>
<%= yield %>

</body>
</html>
