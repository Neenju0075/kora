<% content_for :page_title,  "Profile" %>
<p id="notice">
  <%= notice %>
</p>

<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= @user.name %></p>
        <p class="subtitle is-6"><%= @user.email %></p>
      </div>
      <div class="media-content">
        <p class="subtitle is-6">
          <a href="<%= following_user_path(@user) %>">
            <strong>
              <%= @user.followed_users.where('softDelete = false').count %>
            </strong>
            following
          </a>
        </p>
        <p class="subtitle is-6">
          <a href="<%= followers_user_path(@user) %>">
            <strong>
              <%= @user.followers.where('softDelete = false').count %>
            </strong>
            followers
          </a>
        </p>
      </div>
      <div class="media-content">
        <p class="content"><b>Questions Posted:</b> <%= @user.questions.count %></p>
        <p class="content"><b>Questions Answered:</b> <%= @user.answers.count %></p>
      </div>
      <div class ="level-right">
        <p class="content">
          <%= render 'follow_form' %>
        </p>
      </div>
      <p class="content">
        <%= link_to 'Delete my profile', @user, method: :delete, data: { confirm: 'The user related posts will also gets deleted, Are you sure?' }, class:"button is-danger is-outlined" if session[:user_id] == @user.id%>
      </p>
      </div>
    </div>
  </div>
</div>
<%= render 'questions/form' %>



