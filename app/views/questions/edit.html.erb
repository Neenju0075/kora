<% content_for :page_title,  "Edit your Question" %>
<div class="section">
  <%= simple_form_for @question do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :question, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-primary" %>
  <% end %>
</div>