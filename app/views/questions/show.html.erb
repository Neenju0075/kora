<% content_for :page_title,  "Question" %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- Left side -->
      <div class="level-left">
        <p class="level-item">
          <strong>Actions</strong>
        </p>
      </div>
      <!-- Right side -->
      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_question_path(@question), class:"button" %>
        </p>
        <p class="level-item">
          <%= link_to "Delete", question_path(@question), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
        </p>
      </div>
    </nav>
    <hr/>
  </div>
</section>

<section class="section">
  <div class="content">
    <h3 class="container"><%= @question.question %></h3>
  </div>
</section>

<section class="section answers">
  <div class="container">
    <h2 class="subtitle is-5"><strong><%= @question.answers.count %></strong> Answers</h2>
    <%= render @question.answers %>
    <div class="comment-form">
      <hr />
      <h3 class="subtitle is-3">Answer the question....</h3>
      <%= render 'answers/form' %>
    </div>
  </div>
</section>
