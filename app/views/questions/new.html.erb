<% content_for :page_title,  "Create a new Question" %>
    <div class="section">
      <%= simple_form_for @question do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :question, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
          </div>
        </div>
        <%= f.button :submit, 'Create new post', class: "button is-primary" %>
      <% end %>
    </div>